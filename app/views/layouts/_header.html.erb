<header class="image_tag">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">

      <div class="navbar-brand">
        <%= link_to "Mono-Kan", root_path, class:"text-dark" %>
      </div>

      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <%# ログインに成功した場合 %>
        <% if teacher_signed_in? %>
          <p class="text-left text-light ml-5">ようこそ、<%= current_customer.last_name %>さん！</p>
        <% end %>

        <ul class="navbar-nav ml-auto">
        <!--customerでログインしている時-->
        <% if teacher_signed_in? %>
          <li><%= link_to teachers_my_page_path(current_teacher), class:'btn btn-outline-dark bg-warning mr-3' do %>マイページ<% end %></li>
          <li><%= link_to items_path, class:'btn btn-outline-dark bg-warning mr-3' do %>消耗品一覧<% end %></li>
          <li><%= link_to destroy_teacher_session_path, method: :delete, class:'btn btn-outline-dark bg-warning mr-3' do %>ログアウト<% end %></li>

        <!--adminでログインしている時-->
        <% elsif admin_signed_in? %>
          <li><%= link_to admin_items_path, class:'btn btn-outline-dark bg-warning mr-3' do %>消耗品一覧<% end %></li>
          <li><%= link_to admin_teachers_path, class:'btn btn-outline-dark bg-warning mr-3' do %>先生一覧<% end %></li>
          <li><%= link_to admin_path, class:'btn btn-outline-dark bg-warning mr-3' do %>使用履歴一覧<% end %></li>
          <li><%= link_to admin_genres_path, class:'btn btn-outline-dark bg-warning mr-3' do %>ジャンル一覧<% end %></li>
          <li><%= link_to destroy_admin_session_path, method: :delete, class:'btn btn-outline-dark bg-warning' do %>ログアウト<% end %></li>

        <% else %>
        <!--ログインしていない状態-->
          <li><%= link_to new_teacher_registration_path, class:'btn btn-outline-dark bg-warning mr-3' do %>新規登録<% end %></li>
          <li><%= link_to items_path, class:'btn btn-outline-dark  bg-warning mr-3' do %>消耗品一覧<% end %></li>
          <li><%= link_to new_teacher_session_path,  class:'btn btn-outline-dark text-danger bg-warning' do %>ログイン<% end %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>