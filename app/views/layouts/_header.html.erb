<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

      <div class="navbar-brand">
        <%= link_to "Mono-Kan", root_path, class:"text-light" %>
      </div>

      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <!-- ログインに成功した場合 -->
        <% if teacher_signed_in? %>
          <p class="text-left text-light ml-5">ようこそ、<%= current_teacher.name %>さん！</p>
        <% end %>

        <!--teacherでログインしている時-->
        <% if teacher_signed_in? %>
         <ul class="navbar-nav ml-auto">
            <li><%= link_to "マイページ", teachers_my_page_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "消耗品一覧", items_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "ログアウト", destroy_teacher_session_path, method: :delete, class:'nav-link text-white btn btn-outline-secondary' %></li>
         </ul>
        <div><%= render 'layouts/search' %></div>
        <!--adminでログインしている時-->
        <% elsif admin_signed_in? %>
         <ul class="navbar-nav ml-auto">
            <li><%= link_to "消耗品一覧", admin_items_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "先生一覧", admin_teachers_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "使用報告一覧", admin_root_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:'nav-link text-white btn btn-outline-secondary' %></li>
         </ul>
        <div><%= render 'layouts/search' %></div>

        <% else %>
        <!--ログインしていない状態-->
         <ul class="navbar-nav ml-auto">
            <li><%= link_to "事務ログイン", new_admin_session_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "新規登録", new_teacher_registration_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "消耗品一覧", items_path, class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "ログイン", new_teacher_session_path,  class:'nav-link text-white btn btn-outline-secondary' %></li>
            <li><%= link_to "ゲストログイン（閲覧用）", teachers_guest_sign_in_path, method: :post, class:'nav-link text-white btn btn-outline-secondary' %></li>
         </ul>
         <div><%= render 'layouts/search' %></div>
        <% end %>

      </div>
    </div>
  </nav>
</header>