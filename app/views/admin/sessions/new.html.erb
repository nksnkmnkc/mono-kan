<div class="container mt-4">

  <h2 class="col-3 offset-4 text-center">事務ログイン</h2>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row mt-5 offset-3">
      <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, autofocus: true, class:"form-control-sm ml-4 col-5", placeholder:"sample@example.com", autocomplete: "email" %>
    </div>

    <div class="row mt-5 offset-3">
      <%= f.label :"パスワード" %>
      <%= f.password_field :password, class:"form-control-sm ml-5 col-5", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field row mt-5 offset-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"ml-4" %>
      </div>
    <% end %>

    <div class="actions offset-4 my-3">
      <%= f.submit "ログイン", class:"btn btn-primary col-2 mt-4 ml-5" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>