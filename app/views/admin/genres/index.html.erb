<div class="container">
  <div class="mt-4">
    <div class="col-md-8">

      <h2>ジャンル一覧・追加</h2>
      <div class="mt-4">
        <!--ジャンル名登録フォーム-->
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
          <%= f.label :genre, "ジャンル名" %>
          <%= f.text_field :genre %>
          <%= f.submit "新規投稿", class:"btn btn-sm btn-success" %>
        <% end %>
      </div>

      <!--既に登録されているジャンルのリスト-->
      <div class="col-8 mt-4">
        <table class="table">
          <thead class="table-secondary">
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><p><%= genre.genre %></p></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>