<div class="row">
  <div class="col-12">
    <h3>使用報告一覧</h3>
  </div>
  <table class="table">
    <thead>
      <tr class="table-light table-hover">
        <th scope="col-3">使用日時</th>
        <th scope="col-3">使用者</th>
        <th scope="col-1">使用個数</th>
        <th scope="col-3">使用理由</th>
      </tr>
    </thead>
    <tbody>
    <% utilizations.each do |utilization| %>
      <tr>
        <td>
          <%= link_to admin_utilization_path(utilization.id) do %>
            <%= utilization.created_at.strftime('%Y/%m/%d') %>
          <% end %>
        </td>
        <td><%= utilization.teacher.name %></td>
        <td><%= utilization.utilization_items.sum(:item_count) %></td>
        <td><%= utilization.usage_rule %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>