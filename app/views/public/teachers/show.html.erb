<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <h2>プロフィール</h2>
      <%= render 'info', teacher: @teacher %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>使用報告一覧</h2>
        <% if @utilizations.present? %>
          <table class = "table table-hover table-inverse">
             <thead>
              <tr>
               <th class="table-active">使用日</th>
               <th class="table-active">商品名</th>
               <th class="table-active">使用個数</th>
               <th class="table-active">使用理由</th>
              </tr>
              </thead>
              <tbody>
                <% @utilizations.each do |utilization| %>
                  <tr>
                    <td><%= utilization.created_at.strftime('%Y/%m/%d') %></td>
                     <td><%= utilization.item.name %></td>
                     <td><%= utilization.item_count %> </td>
                    <td><%#= usage_rule_i18n %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        <% else %>
          <p class="container">使用履歴がありません。</p>
        <% end %>

        <h2>ブックマーク一覧</h2>
        <table class = "table table-hover table-inverse">
        </table>
    </div>
  </div>
</div>