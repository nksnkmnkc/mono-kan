<div class="container my-4">
  <h2 class="col-3 offset-4 text-center">アカウント編集</h2>

    <%= form_with model: @teacher, url:teachers_information_path, method: :patch, local: true do |f| %>
     <div class = "form-group row mt-4 offset-3">
       <%= f.label :"アカウント画像", class:"col-3" %>
       <%= f.file_field :profile_image, class:"form-control-file profile_image" %>
     </div>

     <div class="form-group row mt-4 offset-3">
       <%= f.label :"名前", class:"col-4" %>
       <%= f.text_field :name, class:"col-3" %>
     </div>

     <div class="form-group row offset-3">
       <%= f.label :"学年", class:"col-4" %>
       <%= f.text_field :grade, class:"col-3" %>
     </div>

     <div class="form-group row offset-3">
       <%= f.label :"教科", class:"col-4" %>
       <%= f.text_field :subject, class:"col-3" %>
     </div>

     <div class="form-group row offset-3">
       <%= f.label :"部活", class:"col-4" %>
       <%= f.text_field :club,class:"col-3" %>
     </div>

     <div class="form-group row offset-3">
       <%= f.label :"メールアドレス", class:"col-4" %>
       <%= f.text_field :email, class:"col-3" %>
     </div>

     <div class="mt-5">
       <%= f.submit "更新する", class:"btn btn-success mr-5 offset-4" %>
       <%= link_to "退会する", is_deleted_path, method: :patch, class:"btn btn-danger" %>
     </div>
    <% end %>
</div>