<div class="container my-5">
  <h2 class="col-3 bg-light"><strong>アカウント編集</strong></h2>

   <div class="row">
    <%= form_with model: @teacher, url:teachers_information_path, method: :patch, local: true do |f| %>

     <div class = "form-group row">
       <%= f.label :image %>
       <%= f.file_field :profile_image, class:"form-control-file profile_image" %>
     </div>

     <div class="form-group row mt-4">
       <%= f.label :"名前", class:"col-4" %>
       <%= f.text_field :last_name, class:"col-3" %>
       <%= f.text_field :first_name, class:"col-3 ml-3" %>
     </div>

     <div class="form-group row">
       <%= f.label :"学年", class:"col-4" %>
       <%= f.text_field :grade, class:'col-4' %>
     </div>

     <div class="form-group row">
       <%= f.label :"教科", class:"col-4" %>
       <%= f.text_field :subject, class:"col-8" %>
     </div>

     <div class="form-group row">
       <%= f.label :"部活", class:"col-4" %>
       <%= f.text_field :club,class:"col-4" %>
     </div>

     <div class="form-group row">
       <%= f.label :"メールアドレス", class:"col-4" %>
       <%= f.text_field :email, class:"col-8" %>
     </div>

     <div>
       <%= f.submit "更新する", class:"btn btn-success mr-5" %>
       <%= link_to "退会する", teachers_delete_status_path, method: :patch, class:"btn btn-danger" %>
     </div>
    <% end %>
   </div>
</div>