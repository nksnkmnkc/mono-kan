<div class="container mt-5">
  <h2 class="text-center">ログイン</h2>
    <div class="row">

      <%= form_with model: @teacher, url:teacher_session_path, local: true do |f| %>

      <div class="row mt-3">
        <%= f.label :"名前" %>
        <%= f.text_field :name, autofocus: true, placeholder:"令和 道子" %>
      </div>

      <div class="row mt-3">
        <%= f.label :"パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions row">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    <% end %>

    </div>
       <h6 class="mt-5 col-2  text-center"><strong>登録がお済みでない方</strong></h6>
        <p class="mt-3 offset-4"><%= render "public/shared/links" %>から新規登録を行ってください。</p>
</div>