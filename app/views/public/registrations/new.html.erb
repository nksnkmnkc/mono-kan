<div class="container mt-4">
  <h2 class="col-3 offset-4 text-center">新規登録</h2>

      <%= form_with model: @teacher, url:teacher_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row mt-4 offset-3">
        <%= f.label :"名前", class:"col-3" %>
        <%= f.text_field :name, autofocus: true, placeholder:"令和 道子" , class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"メールアドレス", class:"col-3" %>
        <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email", class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"学年", class:"col-3" %>
        <%= f.text_field :grade, autofocus: true, placeholder:"1年", class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"教科", class:"col-3" %>
        <%= f.text_field :subject, autofocus: true, placeholder:"国語", class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"部活", class:"col-3" %>
        <%= f.text_field :club, autofocus: true, placeholder:"野球部", class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"その他", class:"col-3" %>
        <%= f.text_field :another, autofocus: true, placeholder:"図書委員会", class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"パスワード(６文字以上)", class:"col-3" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"col-3" %>
      </div>

      <div class="form-group row offset-3">
        <%= f.label :"パスワード(確認用)", class:"col-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-3" %>
      </div>

      <div class="actions row ml-4">
        <%= f.submit "新規登録", class:"btn btn-success col-2 mx-auto" %>
      </div>
      <% end %>


    <h6 class = "col-3 mt-5 offset-3 text-center"><strong>既に登録済みの方</strong></h6>
      <p class = "row offset-5 mt-3"><%= render "public/shared/links" %>からログインしてください</P>
</div>
