<div class="row d-flex mt-5 ">
  <div class="col-1"></div>
    <div class="col-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <%= render "public/items/genres_form", genres: @genres %>
        </tbody>
      </table>
    </div>

    <div class="col-9">
      <div class="d-flex">
        <p style="font-size:35px"><%= @search_genre %>一覧</p>
        <p style="font-size:25px; line-height: 2;">(全<%= @items_all.count %>件)</p>
      </div>

      <div class="d-flex flex-wrap items_width">
        <% @items.each do |items| %>
          <div class="mx-3 my-3">
            <%= link_to item_path(items) do %>
            <%= image_tag items.get_image, size: "200x160" %>
            <% end %><br>
            <%= items.name %><br>
            <%= items.memo %>
          </div>
        <% end %>
      </div>

      <div class="row justify-content-center my-4">
        <%#= paginate @items %>
      </div>
    </div>
</div>