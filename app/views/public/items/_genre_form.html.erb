<div class="col-2">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre|%>
        <tr>
          <td>
            <%= link_to genre.name, item_searches_path(genre.id, genre: genre.name, model: "genre"), class:"text-dark text-decoration-none" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>